}
.todo--finish .checkbox {
		position: relative;
		background: #eee;
}
.todo--finish .checkbox::after {
		content: '';
		position: absolute;
		width: 10px;
		height: 10px;
		top: 0;
		left: 0;
		right: 0;
		bottom: 0;
		margin: auto;
